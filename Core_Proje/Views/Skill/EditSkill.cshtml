@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Düzenleme Sayfası</h3>
</div>
@using(Html.BeginForm("EditSkill","Skill", FormMethod.Post)) @*Action/Controller/FormMethod/*@
{
    @Html.HiddenFor(x=>x.SkillId, new {@class="form-control"})
    <br />
    @Html.Label("Yetenek Başlığı")
    @Html.TextBoxFor(x=>x.Title, new { @class="form-control"})
    <br />
    <label>Değer</label>
    @Html.TextBoxFor(x=>x.Value, new { @class="form-control"})
    <br />
    <button name="kaydet" class="btn btn-success">Kaydet</button>
}

