@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card-header border-0">
    <h3 class="mb-0">Öne Çıkanlar Düzenleme Sayfası</h3>
</div>
@using (Html.BeginForm("Index", "Feature", FormMethod.Post)) @*Action/Controller/FormMethod/*@
{
    @Html.HiddenFor(x=>x.FeatureId, new {@class="form-control"})
    <br />
    <label>Ad Soyad</label>
    @Html.TextBoxFor(x=>x.Name, new { @class="form-control"})
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x=>x.Header, new { @class="form-control"})
    <br />
    <label>Görev</label>
    @Html.TextBoxFor(x=>x.Title, new { @class="form-control"})
    <br />
    <button name="kaydet" class="btn btn-success">Güncelle</button>
}

